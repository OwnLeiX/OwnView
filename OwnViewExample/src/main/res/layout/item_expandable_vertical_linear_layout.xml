<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <lx.own.view.offline.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_default"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/item_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            tools:text="This is item in ListView." />
    </LinearLayout>
    <lx.own.view.SingleTypeExpandableVerticalLinearLayout
        android:id="@+id/item_expandableVerticalLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGray"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:expandableVerticalLinearLayout_shrinkItemCount="2"
        app:expandableVerticalLinearLayout_hintTextGravity="right"
        app:expandableVerticalLinearLayout_hintText="展开"
        app:expandableVerticalLinearLayout_hintTextColor="@color/colorPurple"
        app:expandableVerticalLinearLayout_hintTextSize="14sp"
        app:expandableVerticalLinearLayout_hintTextViewPaddingTop="5dp"
        app:expandableVerticalLinearLayout_hintTextViewPaddingBottom="5dp"
        app:expandableVerticalLinearLayout_hintTextViewPaddingLeft="10dp"
        app:expandableVerticalLinearLayout_hintTextViewPaddingRight="10dp"/>
</LinearLayout>